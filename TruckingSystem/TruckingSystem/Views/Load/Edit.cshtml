@model LoadEditInputModel

@{
	ViewBag.Title = "Edit Load";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
	<h2>Create Load</h2>
	<form asp-action="Create" method="post">
		<div class="form-group">
			<label asp-for="PickupLocation">Pickup Location</label>
			<input asp-for="PickupLocation" class="form-control" required />
			<span asp-validation-for="PickupLocation" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="DeliveryLocation">Delivery Location</label>
			<input asp-for="DeliveryLocation" class="form-control" required />
			<span asp-validation-for="DeliveryLocation" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Weight">Weight</label>
			<input asp-for="Weight" class="form-control" required />
			<span asp-validation-for="Weight" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Temperature">Temperature</label>
			<input asp-for="Temperature" class="form-control" required />
			<span asp-validation-for="Temperature" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PickupTime">Pickup Time</label>
			<input asp-for="PickupTime" class="form-control" required />
			<span asp-validation-for="PickupTime" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="DeliveryTime">Delivery Time</label>
			<input asp-for="DeliveryTime" class="form-control" required />
			<span asp-validation-for="DeliveryTime" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Distance">Distance</label>
			<input asp-for="Distance" class="form-control" required />
			<span asp-validation-for="Distance" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="BrokerCompanyId">Select Broker</label>
			<select asp-for="BrokerCompanyId" class="form-control" asp-items="@(new SelectList(Model.BrokerCompanies, "Id", "CompanyName"))">
				<option value="@Model.BrokerCompanyId">
					-- Select a Broker --
				</option>
			</select>
			<span asp-validation-for="BrokerCompanyId" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">Create</button>
		<a asp-action="Index" class="btn btn-secondary btn-danger">Cancel</a>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
