@model DriverAddInputModel

@{
	ViewBag.Title = "Craete Driver";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
	<h2>Edit Driver</h2>
	<form asp-action="Create" method="post">
		<div class="form-group">
			<label asp-for="FirstName">First Name</label>
			<input asp-for="FirstName" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="LastName">Last Name</label>
			<input asp-for="LastName" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="LicenseNumber">Licence Number</label>
			<input asp-for="LicenseNumber" class="form-control" required />
		</div>
		<div class="form-group">
			<label for="TruckId">Select Truck</label>
			<select asp-for="TruckId" class="form-control" asp-items="@(new SelectList(Model.AvailableTrucks, "Id", "TruckNumber"))">
				<option value="@Model.TruckId">
					-- Select a Truck --
				</option>
			</select>
			<span asp-validation-for="TruckId" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="TrailerId">Select Trailer</label>
			<select asp-for="TrailerId" class="form-control" asp-items="@(new SelectList(Model.AvailableTrailers, "Id", "TrailerNumber"))">
				<option value="@Model.TrailerId">
					-- Select a Trailer --
				</option>
			</select>
			<span asp-validation-for="TrailerId" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="DriverManagerId">Select Driver Manager</label>
			<select asp-for="DriverManagerId" class="form-control" asp-items="@(new SelectList(Model.DriverManagers, "Id", "FirstName"))">
				<option value="">-- Select a Driver Manager --</option>
			</select>
			<span asp-validation-for="DriverManagerId" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Create</button>
		<a asp-action="Index" class="btn btn-secondary btn-danger">Cancel</a>
	</form>
</div>
