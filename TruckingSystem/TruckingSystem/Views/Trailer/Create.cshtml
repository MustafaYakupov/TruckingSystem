@model TrailerAddInputModel

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2>Create New Trailer</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="TrailerNumber">Trailer Number</label>
            <input type="text" class="form-control" id="TrailerNumber" asp-for="TrailerNumber" required>
            <span asp-validation-for="TrailerNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Make">Make</label>
            <input type="text" class="form-control" id="Make" asp-for="Make" required>
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Type">Type</label>
            <input type="text" class="form-control" id="Type" asp-for="Type" required>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ModelYear">Model Year</label>
            <input type="number" class="form-control" id="ModelYear" asp-for="ModelYear" required>
            <span asp-validation-for="ModelYear" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary btn-danger">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
