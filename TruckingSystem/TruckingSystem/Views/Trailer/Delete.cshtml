@model TrailerDeleteViewModel

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2>Delete Trailer</h2>
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3>Delete Trailer</h3>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this trailer?</p>
            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Trailer Number:</strong> @Model.TrailerNumber</li>
            </ul>
         </div>
    </div>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>
