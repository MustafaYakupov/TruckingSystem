@model TruckAddInputModel

@{
	ViewBag.Title = "Craete Truck";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
	<h2>Craete Truck</h2>
	<form asp-action="Create" method="post">
		<div class="form-group">
			<label asp-for="TruckNumber">Truck Number</label>
			<input asp-for="TruckNumber" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="Make">Make</label>
			<input asp-for="Make" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="Model">Model</label>
			<input asp-for="Model" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="LicensePlate">License Plate</label>
			<input asp-for="LicensePlate" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="ModelYear">Model Year</label>
			<input asp-for="ModelYear" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="Color">Color</label>
			<input asp-for="Color" class="form-control" required />
		</div>
		<div class="form-group">
			<label for="TruckPartId">Select Part</label>
			<select asp-for="PartId" class="form-control">
				<option value="">-- Select a Part --</option>
				@foreach (var part in Model.Parts)
				{
					<option value="@part.Id">
						@($"{part.Type} - {part.Make}")
					</option>
				}
			</select>
			<span asp-validation-for="PartId" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Create</button>
		<a asp-action="Index" class="btn btn-secondary btn-danger">Cancel</a>
	</form>
</div>
